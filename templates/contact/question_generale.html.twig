{% extends 'base-projet.html.twig' %}
{% form_theme questionForm with [
    'bootstrap_4_layout.html.twig',
    'Resources/GregwarCaptchaBundle/views/captcha.html.twig'
] %}

{% block body %}
    <h1 class="text-center m-3">Question Générale</h1>

    <div class="container col-12 col-md-6 offset-md-3">
        {{ form_start(questionForm, {attr: {novalidate:'novalidate'}}) }}

        {{ form_widget(questionForm) }}

        <button class="btn btn-lg btn-primary mt-3">Valider</button>
        <a href="{{ path('projet_liste') }}" class="btn btn-lg btn-secondary mt-3">Retour à l'accueil</a>

        {{ form_end(questionForm) }}
    </div>

{% endblock %}

{% block title %}
    questionForm {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/radouanCss.css') }}" rel="stylesheet">
{% endblock %}
