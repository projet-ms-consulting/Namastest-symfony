{% block captcha_widget %}
    {% if is_human %}
        -
    {% else %}
        {% apply spaceless %}
            <img class="captcha_image" id="{{ image_id }}" src="{{ captcha_code }}" alt="" title="captcha" width="{{ captcha_width }}" height="{{ captcha_height }}" />
            {% if reload %}
                <script type="text/javascript">
                    function reload_{{ image_id }}() {
                        var img = document.getElementById('{{ image_id }}');
                        img.src = '{{ captcha_code }}?n=' + (new Date()).getTime();
                    }
                </script>
                <a class="captcha_reload btn btn-sm btn-secondary" href="javascript:reload_{{ image_id }}();" title="Recharger le captcha">
                    <i class="fas fa-sync"></i>
                </a>
            {% endif %}
            {{ form_widget(form) }}
        {% endapply %}
    {% endif %}
{% endblock %}
