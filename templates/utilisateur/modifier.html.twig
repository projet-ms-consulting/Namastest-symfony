{% extends 'base-projet.html.twig' %}
{% form_theme profilForm with [
    'bootstrap_4_layout.html.twig',
    'Resources/GregwarCaptchaBundle/views/captcha.html.twig'
] %}

{% block title %}Gérer son profil {{ parent() }}{% endblock %}

{% block body %}
    <div class="col-md-4 offset-md-4 mt-2">
        <h1 class="text-center">Gérer son profil</h1>

        {{ form_start(profilForm) }}
        {{ form_widget(profilForm) }}
        <div class="mt-3 col-12 d-flex">
            <input type="checkbox" value="false" id="show-password">
            <label for="show-password">Montrer le mot de passe</label>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-lg mt-4 btn-primary m-1">Enregistrer</button>
            <button type="button" class="btn btn-lg mt-4 btn-red m-1" data-bs-toggle="modal" data-bs-target="#exampleModale">Supprimer mon compte</button>
        </div>
        {{ form_end(profilForm) }}
    </div>

    {% include 'inc/modals/delete-user-modal.html.twig'%}

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/utils/togglePasswordVisibility.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}