{% extends 'base-gestion-projet.html.twig' %}

{% block title %}Gestion des rôles {{ parent() }}{% endblock %}

{% if projet.auteur != app.user %}
    {% set addRole = false %}
    {% set editRole = false %}
    {% set deleteRole = false %}
    {% for participant in projet.participantsProjet|filter(p => p.utilisateur == app.user) %}
        {% for droit in participant.role.droits|filter(r => 'AJOUROLE' or r.code == 'EDITROLE' or r.code == 'SUPPROLE') %}
            {% if droit.code == 'AJOUROLE' %}
                {% set addRole = true %}
            {% endif %}
            {% if droit.code == 'EDITROLE' %}
                {% set editRole = true %}
            {% endif %}
            {% if droit.code == 'SUPPROLE' %}
                {% set deleteRole = true %}
            {% endif %}
        {% endfor %}
    {% endfor %}
{% else %}
    {% set addRole = true %}
    {% set editRole = true %}
    {% set deleteRole = true %}
{% endif %}

{% block body %}
<div class="row row-cols-1">
    <div>
        <h1 class="text-center">Gestion des rôles</h1>
        <hr>

        {% if addRole %}
            <div class="barre-action">
                <a class="btn btn-lg btn-primary" title="Ajouter un nouveau rôle" href="{{ path('role_ajouter', {projetId: projet.id}) }}">
                    <i class="fas fa-plus-square"></i>
                    <span class="text-ab-link">Ajouter un nouveau rôle</span>
                </a>
            </div>
        {% endif %}


        {% if roles is not empty %}
            <div class="accordion" id="accordionExample">
                {% set i = 0 %}
                {% for r in roles %}
                    {% set i = i+1 %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne{{ i }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne{{ i }}" aria-expanded="false" aria-controls="collapseOne{{ i }}">
                            {{ r.libelle }}
                        </button>
                    </h2>
                    <div id="collapseOne{{ i }}" class="accordion-collapse collapse" aria-labelledby="headingOne{{ i }}" data-bs-parent="#accordionExample">
                        <div class="d-flex flex-nowrap flex-row justify-content-center mt-3">
                            {% if editRole %}
                                <a href="{{ path('role_modifier', {projetId: projet.id, id: r.id}) }}" class="btn btn-fonce py-2" title="Modifier le rôle">
                                    <i class="far fa-edit"></i>
                                </a>
                            {% endif %}
                            {% if deleteRole %}
                                <a class="btn btn-red py-2 ms-1"
                                   title="Supprimer le rôle"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteModal"
                                   data-bs-type="le rôle"
                                   data-bs-id="{{ r.id }}"
                                   data-bs-name="{{ r.libelle }}"
                                   data-bs-path="{{ path('role_delete', {projetId: projet.id, id: r.id}) }}"
                                   href="#supprimer">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            {% endif %}
                        </div>
                        <hr class="mt-4">
                        <div class="accordion-body list-group list-group-horizontal list-rights">
                            {% for d in r.droits %}
                                <div>
                                    <div class="role-items">-> {{ d.libelle }}</div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            {# NE DEVRAIS JAMAIS S'AFFICHER EN THEORIE #}
            <div class="text-center mt-5">
                <p>Vous n'avez créé aucun rôle pour le moment.</p>
            </div>
        {% endif %}
    </div>
</div>
{% include('inc/modals/delete-modal.html.twig') %}
{% endblock %}

{% block scripts %}
{{ parent() }}
<script src="{{ asset('scripts/modals/deleteModal.js') }}"></script>
{% endblock %}
