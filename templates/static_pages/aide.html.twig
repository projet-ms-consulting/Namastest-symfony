{% extends 'base-projet.html.twig' %}

{% block title %} Documentation {{  parent() }} {% endblock %}

{% block body %}

    <h1>Documentation et aide à la prise en main</h1>
    <hr>
    <div class="accordion accordion-flush" id="accordionFlushGeneral">
        <div class="accordion-item">
            <h2 class="accordion-header" id="general-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general-collapseOne" aria-expanded="false" aria-controls="general-collapseOne">
                    <i class="doc-icon fas fa-project-diagram"></i> <span>Gérer les projets</span>
                </button>
            </h2>
            <div id="general-collapseOne" class="accordion-collapse collapse" aria-labelledby="general-headingOne">
                <div class="accordion-body">

                    {% include 'inc/aide-fragments/projets/projets-aide.html.twig' %}

                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="general-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general-collapseTwo" aria-expanded="false" aria-controls="general-collapseTwo">
                    <i class="doc-icon far fa-list-alt"></i> <span>Gérer les cas de tests dans un projet</span>
                </button>
            </h2>
            <div id="general-collapseTwo" class="accordion-collapse collapse" aria-labelledby="general-headingTwo">
                <div class="accordion-body">

                    {% include 'inc/aide-fragments/cas-test/cas-test-aide.html.twig' %}

                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="general-headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general-collapseThree" aria-expanded="false" aria-controls="general-collapseThree">
                    <i class="doc-icon fas fa-folder-open"></i> <span>Gérer les catalogues de tests</span>
                </button>
            </h2>
            <div id="general-collapseThree" class="accordion-collapse collapse" aria-labelledby="general-headingThree">
                <div class="accordion-body">

                    {% include 'inc/aide-fragments/catalogues/catalogues-aide.html.twig' %}

                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="general-headingFour">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general-collapseFour" aria-expanded="false" aria-controls="general-collapseFour">
                    <i class="doc-icon fas fa-receipt"></i> <span>Gérer les campagnes de tests</span>
                </button>
            </h2>
            <div id="general-collapseFour" class="accordion-collapse collapse" aria-labelledby="general-headingFour">
                <div class="accordion-body">

                    {% include 'inc/aide-fragments/campagnes/campagnes-aide.html.twig' %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

