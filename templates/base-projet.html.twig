<!DOCTYPE html>
<html class="h-100" lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <title>{% block title %}- Namastest{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="{{ asset('fontawesome/css/all.css') }}" rel="stylesheet"> <!--load all fontawesome -->
        <link href="{{ asset('css/style.min.css') }}" rel="stylesheet"> {# CSS PERSONNALISE, OVERRIDE BOOTSTRAP ET FONTAWESOME #}
        <link rel="icon" type="image/png" href="{{ asset('img/Logo_App.png') }}" alt="Icone de Namastet"/>
        <link rel="apple-touch-icon" href="{{ asset('img/Logo_App.png') }}">
    {% endblock %}
    </head>
    <body class="h-100 d-flex flex-column">
    {% set base = 'projet' %}
        <header>
            {% include 'inc/nav.html.twig' %}
        </header>
        <main class="my-3">
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for m in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ m }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <div>
                    {% block body %}{% endblock %}
                </div>
            </div>
        </main>

        {% include 'inc/footer.html.twig'%}

    {% block scripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="{{ asset('scripts/utils/removeErrorIcon.js') }}"></script>
        <script src="{{ asset('scripts/utils/flashMessages.js')}}"></script>
    {% endblock %}
    </body>
</html>
